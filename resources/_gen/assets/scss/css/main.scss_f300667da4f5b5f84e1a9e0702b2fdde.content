body {
  font-family: "Source Sans Pro", sans-serif;
  color: #313335;
  background-color: whitesmoke; }

ul {
  list-style: none;
  padding-left: 0em; }

a {
  text-decoration: none; }

h1 {
  margin-bottom: 0.2em; }

.btn {
  background-color: #0077b5;
  color: white;
  border: none;
  padding: 0.5em; }

.container {
  display: flex; }
  @media screen and (max-width: 540px) {
    .container {
      flex-direction: column; } }

.main {
  background-color: whitesmoke;
  display: flex;
  flex-direction: column;
  align-items: center; }
  @media screen and (max-width: 540px) {
    .main {
      padding: 1em; } }
  .main header {
    width: 92%; }
  .main section {
    width: 90%;
    background-color: white;
    margin-top: 0.5em;
    margin-bottom: 0.5em;
    padding: 0em 1em 0em 1em;
    border: 1px solid #caccce; }
    @media screen and (max-width: 540px) {
      .main section {
        width: 95%;
        padding-left: 0.5em;
        padding-right: 0.5em; } }
    .main section h2 {
      margin-top: 0.4em;
      margin-bottom: 0em; }

