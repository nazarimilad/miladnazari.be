nav {
  background-color: #0077b5;
  position: sticky;
  top: 0;
  min-width: 10em;
  max-width: 10em;
  height: 100vh;
  display: flex;
  flex-direction: column;
  justify-content: space-between; }
  @media screen and (max-width: 540px) {
    nav {
      position: inherit;
      height: auto;
      max-width: inherit; } }
  nav figcaption, nav small, nav a {
    color: white; }
  nav figure {
    margin: 0em;
    text-align: center;
    margin-bottom: 1em;
    display: flex;
    flex-direction: column; }
    @media screen and (max-width: 540px) {
      nav figure {
        flex-direction: row;
        align-items: center; } }
    nav figure #profilePicture {
      width: 100%; }
      @media screen and (max-width: 540px) {
        nav figure #profilePicture {
          max-height: 12em; } }
      @media (max-height: 450px) {
        nav figure #profilePicture {
          /* remove picture if viewport is not heigh enough */ }
          nav figure #profilePicture #profilePicture {
            display: none; } }
    nav figure .profileDescription {
      padding: 0.5em; }
      @media screen and (max-width: 540px) {
        nav figure .profileDescription {
          display: flex;
          flex-wrap: wrap;
          flex-direction: column;
          margin-left: auto;
          margin-right: auto; } }
      nav figure .profileDescription figcaption {
        padding: 0.5em;
        font-weight: 700; }
  nav #menu {
    background-color: #313335;
    width: 100%; }
    @media screen and (max-width: 540px) {
      nav #menu {
        margin-top: -1.3em; } }
    nav #menu ul {
      margin-top: 0em;
      margin-bottom: 0em;
      display: flex;
      flex-direction: column; }
      @media screen and (max-width: 540px) {
        nav #menu ul {
          flex-direction: row;
          justify-content: space-around;
          text-align: center; } }
      nav #menu ul li {
        margin: 0em;
        padding: 0.3em;
        display: flex;
        justify-content: flex-start;
        align-items: center;
        padding-right: 0em; }
        @media screen and (max-width: 540px) {
          nav #menu ul li {
            width: 100%; } }
        nav #menu ul li:nth-child(odd) {
          background-color: #6d6f72; }
        nav #menu ul li a {
          display: block;
          width: 100%;
          padding: 0.3em 0.3em 0.3em 1em; }
          @media screen and (max-width: 540px) {
            nav #menu ul li a {
              padding-top: 0.6em;
              padding-bottom: 0.6em; } }
        nav #menu ul li .signet {
          min-height: 1.6em;
          width: 7%;
          height: 90%; }
          nav #menu ul li .signet.active {
            background-color: whitesmoke; }
  nav #contact {
    text-align: center; }
    nav #contact li {
      display: inline;
      margin-left: 0.5em;
      margin-right: 0.5em;
      border-bottom: solid 2px #0077b5; }
      nav #contact li:hover {
        border-bottom: solid 2px white; }
      nav #contact li img {
        width: 10%; }
        @media screen and (max-width: 540px) {
          nav #contact li img {
            width: 5%; } }
  nav #language {
    display: flex;
    flex-direction: row;
    justify-content: center;
    margin-bottom: 1em; }
    nav #language div {
      display: inline-block;
      margin-right: 0.4em;
      margin-left: 0.4em;
      padding: 0.1em; }
      nav #language div.active_language {
        border-bottom: solid 2px white; }

